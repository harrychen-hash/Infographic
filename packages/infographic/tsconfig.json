{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "types": ["node"],
    "composite": true,
    "paths": {
      "@antv/infographic-jsx": ["../jsx/src"],
      "@antv/infographic-jsx/*": ["../jsx/src/*"],
      "@antv/infographic": ["./src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../jsx" }]
}
