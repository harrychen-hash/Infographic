{
  "name": "@antv/infographic",
  "version": "0.0.1",
  "description": "AntV Infographic generator and visualization library",
  "keywords": [
    "antv",
    "infographic",
    "visualization"
  ],
  "license": "MIT",
  "author": "Aarebecca",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "ci": "run-s test build lint",
    "lint": "eslint . --ext .ts,.tsx && tsc --noEmit -p __tests__",
    "test": "vitest --run --coverage"
  },
  "dependencies": {
    "@antv/infographic-jsx": "workspace:^",
    "lodash-es": "^4.17.21",
    "roughjs": "^4.6.6",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/tinycolor2": "^1.4.6",
    "jsdom": "^27.0.0"
  }
}
